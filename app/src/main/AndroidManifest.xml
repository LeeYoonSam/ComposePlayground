<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".ComposePlaygroundApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposePlayground">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ComposePlayground.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.album.AlbumActivity" />

        <activity
            android:name=".ui.navigation.BottomNavigationAnimationActivity" />

        <activity
            android:name=".ui.keyboard.KeyboardHandlingActivity"
            android:theme="@style/Theme.ComposePlayground.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".ui.activity.lazycolumn.sectionheader.SectionHeaderLazyColumnActivity" />

        <activity
            android:name=".ui.sample.payment.CheckoutActivity"
            android:theme="@style/Theme.ComposePlayground.NoActionBar" />

        <activity
            android:name=".ui.sample.payment.PaymentActivity"
            android:theme="@style/Theme.ComposePlayground.NoActionBar" />

        <activity android:name=".ui.sample.photoapp.PhotoMainActivity" />
        <activity android:name=".ui.sample.product.ProductDetailMainActivity" />
        <activity android:name=".ui.sample.drawing.DrawingActivity" />
        <activity android:name=".ui.animation.xmas.XmasActivity" />

        <!-- Scroll Timer Activities -->
        <activity android:name=".ui.scroll.timer.ScrollTimerActivity" />
        <activity android:name=".ui.scroll.timer.ScrollTimerComposeActivity" />
    </application>

</manifest>